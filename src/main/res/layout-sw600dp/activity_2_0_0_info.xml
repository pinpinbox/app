<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fontPath="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false">


    <com.pinpinbox.android.Views.parallaxscroll.views.ParallaxScrollView
        android:id="@+id/parallaxScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:alpha_factor="1.0"
        app:parallax_factor="1.9">

        <!--parallax_factor - 對於ScrollView和ListView，第一個視圖的視差因子-->
        <!--inner_parallax_factor - 僅對於ScrollView - 每個視圖和視圖之間的視差因子-->
        <!--parallax_views_num - 僅對於ScrollView - 視差視圖的數量-->
        <!--circular_parallax - 僅用於ListView - 是否所有列表都是視差的-->


        <LinearLayout
            android:id="@+id/linContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rImageArea"
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/image_background_2_0_0_radius"
                android:transitionName="img_bg">


                <com.pinpinbox.android.Views.CircleView.RoundCornerImageView
                    android:id="@+id/coverImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.85"
                    android:scaleType="centerCrop"
                    android:transitionName="cover"
                    app:siBorderAlpha="0"
                    app:siRadius="6dp" />

                <LinearLayout
                    android:id="@+id/linDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-40dp"
                    android:alpha="0"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/ppb200_padding_margin_first">


                    <LinearLayout
                        android:id="@+id/linLike"
                        android:layout_width="128dp"
                        android:layout_height="36dp"
                        android:background="@drawable/click_2_0_0_albuminfo_data"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="48dp"
                        android:translationZ="@dimen/ppb200_translationZ_user">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic200_like_light" />

                        <TextView
                            android:id="@+id/tvLikeCount"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text=""
                            android:textColor="@color/pinpinbox_2_0_0_secondary_text"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linMessage"
                        android:layout_width="128dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="@dimen/ppb200_padding_margin_second"
                        android:background="@drawable/click_2_0_0_albuminfo_data"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="48dp"
                        android:translationZ="@dimen/ppb200_translationZ_user">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic200_message_light" />

                        <TextView
                            android:id="@+id/tvMessageCount"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text=""
                            android:textColor="@color/pinpinbox_2_0_0_secondary_text"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linSponsor"
                        android:layout_width="128dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="@dimen/ppb200_padding_margin_second"
                        android:background="@drawable/click_2_0_0_albuminfo_data"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="48dp"
                        android:translationZ="@dimen/ppb200_translationZ_user"
                        android:visibility="gone">


                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic200_count_sponsor_light" />

                        <TextView
                            android:id="@+id/tvSponsorCount"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text="20"
                            android:textColor="@color/pinpinbox_2_0_0_secondary_text"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>



                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linAlpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/ppb200_bottom_height">


                <!--作品內容種類-->
                <LinearLayout
                    android:id="@+id/linType"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/signalAudioImg"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic200_audio_play_light"
                        android:visibility="gone" />


                    <ImageView
                        android:id="@+id/signalVideoImg"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/ic200_video_with_circle_light"
                        android:visibility="gone" />


                    <ImageView
                        android:id="@+id/signalSlotImg"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/ic200_gift_light"
                        android:visibility="gone" />


                </LinearLayout>


                <!--作品名稱-->
                <TextView
                    android:id="@+id/tvName"
                    style="@style/ppb200_work_name"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                    android:layout_marginTop="@dimen/ppb200_padding_margin_big"
                    android:text="" />

                <TextView
                    android:id="@+id/tvViewedCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:letterSpacing="0.1"
                    android:text=""
                    android:textColor="@color/pinpinbox_2_0_0_secondary_text"
                    android:textSize="@dimen/ppb200_common_text_small"
                    />


                <!--作品說明-->
                <TextView
                    android:id="@+id/tvDescription"
                    style="@style/ppb200_detail_description"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                    android:layout_marginTop="@dimen/ppb200_padding_margin_first" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/ppb200_padding_margin_first"
                    android:layout_marginTop="18dp"
                    android:background="@color/pinpinbox_2_0_0_divider" />
                <!--16修正為18-->

                <!--&lt;!&ndash;作者&ndash;&gt;-->

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1">

    <TextView
        android:id="@+id/tvPwdTitle"
        style="@style/ppb200_title_first"
        android:layout_marginLeft="@dimen/ppb200_padding_margin_big"
        android:layout_marginTop="@dimen/ppb200_title_margin_second"
        android:text="@string/pinpinbox_2_0_0_title_get_back_password"
        />

    <LinearLayout
        android:id="@+id/linPwdBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPwdTitle"
        android:layout_marginLeft="@dimen/ppb200_padding_margin_big"
        android:layout_marginTop="-4dp"
        android:background="@drawable/click_2_0_0_default"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ppb200_padding_margin_third"
        android:paddingLeft="2dp"
        android:paddingRight="@dimen/ppb200_padding_margin_second"
        android:paddingTop="@dimen/ppb200_padding_margin_third">

        <ImageView
            android:id="@+id/backImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic200_arrow_left_light"
            android:padding="8dp"/>

        <TextView
            android:letterSpacing="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/pinpinbox_2_0_0_button_back_to_login"
            android:textColor="@color/pinpinbox_2_0_0_secondary_text"
            android:textSize="16sp" />

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="116dp"
            android:layout_height="30dp"
            android:alpha="0.5"
            android:layout_gravity="right"
            android:src="@drawable/pinpin_logo" />


        <!--enter phone-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">


            <TextView
                android:letterSpacing="0.1"
                android:id="@+id/tvPwdCountry"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:background="@drawable/click_2_0_0_grey_third_radius"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="台灣+886"
                android:textColor="@color/pinpinbox_2_0_0_first_text"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:ellipsize="end"
                android:maxLines="2"/>


            <EditText
                style="@style/ppb200_EditText"
                android:id="@+id/edPwdPhone"
                android:layout_width="352dp"
                android:layout_height="48dp"
                android:hint="@string/pinpinbox_2_0_0_input_hint_phone_number"
                android:singleLine="true"
                android:inputType="phone"/>


        </LinearLayout>


        <!--enter email-->
        <RelativeLayout
            android:id="@+id/rPwdMail"
            android:layout_width="480dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/border_2_0_0_grey_third_radius">


            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/ppb200_common_icon_side"
                android:layout_height="@dimen/ppb200_common_icon_side"
                android:padding="12dp"
                android:src="@drawable/ic200_mail_dark" />


            <EditText
                style="@style/ppb200_EditText"
                android:id="@+id/edPwdMail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/img2"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:hint="@string/pinpinbox_2_0_0_input_hint_mail"
                android:paddingLeft="0dp" />


        </RelativeLayout>


        <!--send phone number-->
        <TextView
            android:id="@+id/tvPwdSendPhone"
            style="@style/ppb200_Button_main_common_radius"
            android:layout_marginTop="@dimen/ppb200_padding_margin_big"
            android:layout_gravity="center_horizontal"
            android:text="@string/pinpinbox_2_0_0_button_send" />


    </LinearLayout>

        </RelativeLayout>

</RelativeLayout>
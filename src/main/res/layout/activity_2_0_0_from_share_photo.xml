<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:background="@color/pinpinbox2_0_0_black_alpha">


    <LinearLayout
        android:id="@+id/linLoad"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:background="@drawable/border_2_0_0_white_radius"
        android:gravity="center"
        android:orientation="vertical">


        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.DoubleBounce"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:SpinKit_Color="@color/pinpinbox_2_0_0_third_main" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ppb200_padding_margin_second"
            android:letterSpacing="0.1"
            android:text="@string/pinpinbox_2_0_0_other_message_photo_uploading"
            android:textColor="@color/pinpinbox_2_0_0_first_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvUpLoadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ppb200_padding_margin_second"
            android:letterSpacing="0.1"
            android:text="@string/pinpinbox_2_0_0_other_text_count_uploading"
            android:textColor="@color/pinpinbox_2_0_0_first_text"
            android:textSize="20sp" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rSelect"
        android:layout_width="282dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="192dp"
        android:background="@drawable/border_2_0_0_white_radius">

        <GridView
            android:id="@+id/gvPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:horizontalSpacing="6dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:paddingBottom="96dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="36dp"
            android:scrollbars="none"
            android:verticalSpacing="6dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/border_2_0_0_bar_top_white_alpha_radius"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:background="@drawable/click_2_0_0_default"
                android:padding="12dp"
                android:src="@drawable/ic200_cancel_dark" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:letterSpacing="0.1"
                android:text="@string/pinpinbox_2_0_0_title_create_new_album"
                android:textColor="@color/pinpinbox_2_0_0_first_text"
                android:textSize="@dimen/ppb200_common_text_second" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:letterSpacing="0.1"
                android:text="0/12"
                android:textColor="@color/pinpinbox_2_0_0_first_text"
                android:textSize="@dimen/ppb200_common_text_second" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_2_0_0_bar_bottom_white_alpha_radius"
            android:orientation="vertical"
            android:paddingBottom="@dimen/ppb200_padding_margin_second">

            <TextView
                android:id="@+id/tvCommonSize"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/click_2_0_0_list_item"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="@string/pinpinbox_2_0_0_itemtype_common_upload"
                android:textColor="@color/pinpinbox_2_0_0_first_text"
                android:textSize="@dimen/ppb200_common_text_second" />


            <TextView
                android:id="@+id/tvOriginalSize"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/click_2_0_0_list_item"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="@string/pinpinbox_2_0_0_itemtype_original_upload"
                android:textColor="@color/pinpinbox_2_0_0_first_text"
                android:textSize="@dimen/ppb200_common_text_second" />


        </LinearLayout>


    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pinpinbox_2_0_0_other_text_go_to_editor_upload_video"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_below="@+id/rSelect"
        android:layout_alignLeft="@+id/rSelect"
        android:layout_alignRight="@+id/rSelect"
        android:letterSpacing="0.1"
        android:layout_marginTop="@dimen/ppb200_padding_margin_second"/>


</RelativeLayout>
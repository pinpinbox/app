<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="false">


    <in.srain.cube.views.GridViewWithHeaderAndFooter
        android:id="@+id/gvHobby"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="120dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:clipToPadding="false"
        android:paddingBottom="96dp"
        android:listSelector="@color/transparent"
        android:scrollbars="none"/>


    <RelativeLayout
        style="@style/ppb200_action_bar_with_status">

        <ImageView
            android:id="@+id/backImg"
            style="@style/ppb200_ic_action_back"
            android:layout_alignParentBottom="true" />



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rBottom"
        style="@style/ppb200_bottom_bar"
        android:visibility="gone">



        <TextView
            style="@style/ppb200_Button_main_common_radius"
            android:id="@+id/tvConfirm"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/ppb200_padding_margin_first"
            android:paddingRight="@dimen/ppb200_padding_margin_first"
            android:layout_centerInParent="true"
            android:text="@string/pinpinbox_2_0_0_other_text_select_done_start_use_pinpinbox"/>




    </RelativeLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <RelativeLayout
            android:id="@+id/rBackground"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/click_2_0_0_card_notify"
            android:padding="4dp">

            <com.pinpinbox.android.Views.CircleView.RoundCornerImageView
                android:id="@+id/userImg"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                app:siBorderColor="@color/pinpinbox_2_0_0_divider"
                app:siBorderWidth="0.5dp"
                app:siRadius="64dp" />


            <TextView
                android:id="@+id/tvMessage"
                style="@style/ppb200_notify_message"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/ppb200_padding_margin_second"
                android:layout_toRightOf="@+id/userImg" />

            <ImageView
                android:id="@+id/messageTypeImg"
                style="@style/ppb200_notify_message_image"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/userImg"
                android:layout_toRightOf="@+id/userImg"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvMessageTypeText"
                style="@style/ppb200_notify_message_type_text"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/messageTypeImg"
                android:layout_toRightOf="@+id/messageTypeImg"
                android:text="" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/ppb200_notify_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="false">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="72dp"
        android:alpha="0"/>

    <TextView
        android:id="@+id/tvGuideNoAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.2"
        android:text="@string/pinpinbox_2_0_0_guide_no_match_keyword_album"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/white"
        android:lineSpacingExtra="4dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/ppb200_guide"
        android:background="@drawable/border_2_0_0_bg_guide"
        android:padding="32dp"
        android:layout_marginTop="408dp"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ppb200_action_bar_height_with_status"
        android:background="@color/pinpinbox_2_0_0_action_bar_color"
        android:orientation="horizontal"
        android:gravity="bottom">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:background="@drawable/border_2_0_0_grey_third_radius"
                android:layout_toLeftOf="@+id/tvScanSearch"
                android:layout_marginRight="16dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic200_search_dark"
                    android:layout_alignParentLeft="true"
                    android:padding="8dp"
                    android:id="@+id/imageView17" />

                <EditText
                    style="@style/ppb200_EditText"
                    android:id="@+id/edSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="0dp"
                    android:background="@null"
                    android:hint=""
                    android:text=""
                    android:singleLine="true"
                    android:layout_marginLeft="36dp"
                    android:layout_toLeftOf="@+id/clearImg"
                    android:layout_toStartOf="@+id/clearImg" />

                <ImageView
                    android:id="@+id/clearImg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/click_2_0_0_default"
                    android:src="@drawable/ic200_cancel_light"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:visibility="gone"/>


            </RelativeLayout>

            <TextView
                android:letterSpacing="0.1"
                android:id="@+id/tvScanSearch"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ppb200_common_button_small_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                android:text="@string/pinpinbox_2_0_0_button_scan_search"
                android:textSize="@dimen/ppb200_common_text_second"
                android:textColor="@color/pinpinbox_2_0_0_first_main"
                android:paddingLeft="@dimen/ppb200_padding_margin_first"
                android:paddingRight="@dimen/ppb200_padding_margin_first"
                android:gravity="center"
                android:background="@drawable/click_2_0_0_main_button_frame_white_radius"
                fontPath="fonts/OpenSans-Bold.ttf"/>

            <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
                android:id="@+id/pbRefresh"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:indeterminate="true"
                android:visibility="gone"
                app:spb_colors="@array/loadmore"
                app:spb_gradients="true"
                app:spb_mirror_mode="true"
                app:spb_progressiveStart_activated="true"
                app:spb_progressiveStart_speed="3"
                app:spb_progressiveStop_speed="6"
                app:spb_reversed="true"
                app:spb_sections_count="8"
                app:spb_speed="3"
                app:spb_stroke_separator_length="0dp"
                app:spb_stroke_width="4dp" />


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clipChildren="false"
        android:orientation="vertical">


        <!--36不能移除-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                android:layout_marginTop="@dimen/ppb200_padding_margin_big"
                android:background="@drawable/click_2_0_0_default"
                android:orientation="horizontal">

                <com.pinpinbox.android.Views.CircleView.RoundCornerImageView
                    android:id="@+id/userImg"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="centerCrop"
                    app:siBorderColor="@color/pinpinbox_2_0_0_divider"
                    app:siBorderWidth="0.5dp"
                    app:siRadius="96dp" />


                <LinearLayout
                    android:id="@+id/linData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:gravity="center"
                    android:alpha="0"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvViewed"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ppb200_padding_margin_third"
                            android:letterSpacing="0.1"
                            android:text=""
                            android:textColor="@color/pinpinbox_2_0_0_first_text"
                            android:textSize="@dimen/ppb200_title_second_size" />

                        <TextView
                            android:id="@+id/tvV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ppb200_padding_margin_third"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text="@string/pinpinbox_2_0_0_other_text_people_browsing"
                            android:textColor="@color/pinpinbox_2_0_0_first_text"
                            android:textSize="@dimen/ppb200_common_text_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linFollowMe"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@drawable/click_2_0_0_default"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvFollow"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ppb200_padding_margin_third"
                            android:letterSpacing="0.1"
                            android:text=""
                            android:textColor="@color/pinpinbox_2_0_0_first_text"
                            android:textSize="@dimen/ppb200_title_second_size" />

                        <TextView
                            android:id="@+id/tvF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ppb200_padding_margin_third"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text="@string/pinpinbox_2_0_0_other_text_people_follow"
                            android:textColor="@color/pinpinbox_2_0_0_first_text"
                            android:textSize="@dimen/ppb200_common_text_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linSponsorList"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@drawable/click_2_0_0_default"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvSponsor"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ppb200_padding_margin_third"
                            android:letterSpacing="0.1"
                            android:text=""
                            android:textColor="@color/pinpinbox_2_0_0_first_text"
                            android:textSize="@dimen/ppb200_title_second_size" />

                        <TextView
                            android:id="@+id/tvS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ppb200_padding_margin_third"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text="@string/pinpinbox_2_0_0_other_text_people_sponsor"
                            android:textColor="@color/pinpinbox_2_0_0_first_text"
                            android:textSize="@dimen/ppb200_common_text_small" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tvName"
                fontPath="fonts/OpenSans-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="@dimen/ppb200_padding_margin_first"
                android:gravity="left"
                android:includeFontPadding="false"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="@dimen/ppb200_lineSpacingExtra_second"
                android:text=""
                android:textColor="@color/pinpinbox_2_0_0_first_text"
                android:textSize="@dimen/ppb200_userarea_name"
                android:transitionName="bg_user_name"
                android:alpha="0"/>



            <LinearLayout
                android:id="@+id/linContents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/ppb200_padding_margin_first"
                android:alpha="0"
                android:orientation="vertical">



                <!--sponsor message-->
                <RelativeLayout
                    android:id="@+id/rSponsorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                    android:background="@drawable/border_2_0_0_grey_third_radius"
                    android:visibility="gone">

                    <TextView
                        fontPath="fonts/OpenSans-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/tvBuyP"
                        android:letterSpacing="0.1"
                        android:padding="16sp"
                        android:text="我正在參加贊助賽!請點進下方任一相本贊助我吧^^"
                        android:textColor="@color/pinpinbox_2_0_0_first_text"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBuyP"
                        style="@style/ppb200_Button_main_small_radius"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:text="買P點" />


                </RelativeLayout>

                <!--link-->
                <LinearLayout
                    android:id="@+id/linLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ppb200_padding_margin_big"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:text="@string/pinpinbox_2_0_0_other_text_links"
                        android:textColor="@color/pinpinbox_2_0_0_secondary_text"
                        android:textSize="@dimen/ppb200_common_text_third" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/ppb200_padding_margin_second"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/webImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_web" />

                        <ImageView
                            android:id="@+id/facebookImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_facebook" />

                        <ImageView
                            android:id="@+id/googleImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_google" />

                        <ImageView
                            android:id="@+id/instagramImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_instagram" />

                        <ImageView
                            android:id="@+id/linkedinImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_linkedin" />

                        <ImageView
                            android:id="@+id/pinterestImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_pinterest" />

                        <ImageView
                            android:id="@+id/twitterImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_twitter" />


                        <ImageView
                            android:id="@+id/youtubeImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_youtube" />


                    </LinearLayout>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvAlbumsTitle"
                        style="@style/ppb200_title_second"
                        android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                        android:text="@string/pinpinbox_2_0_0_title_works_collection" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                        android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                        android:layout_toEndOf="@+id/tvAlbumsTitle"
                        android:layout_toRightOf="@+id/tvAlbumsTitle"
                        android:background="@color/pinpinbox_2_0_0_divider" />

                </RelativeLayout>


            </LinearLayout>




        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
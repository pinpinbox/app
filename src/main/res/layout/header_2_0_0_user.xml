<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fontPath="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/bg200_tilt_up_right_white_2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <!--user name-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                android:layout_marginTop="-8dp"
                android:background="@drawable/click_2_0_0_default"
                android:orientation="horizontal"
                android:padding="@dimen/ppb200_padding_margin_second">

                <com.pinpinbox.android.Views.CircleView.RoundCornerImageView
                    android:id="@+id/userImg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    app:siBorderColor="@color/pinpinbox_2_0_0_divider"
                    app:siBorderWidth="0.5dp"
                    app:siRadius="96dp" />

                <TextView
                    android:id="@+id/tvName"
                    fontPath="fonts/OpenSans-Bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_second"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:lineSpacingExtra="2dp"
                    android:maxWidth="144dp"
                    android:text=""
                    android:textColor="@color/pinpinbox_2_0_0_first_text"
                    android:textSize="@dimen/ppb200_common_text_first" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linContents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/ppb200_padding_margin_first"
                android:alpha="0"
                android:orientation="vertical">


                <!--sponsor message-->
                <RelativeLayout
                    android:id="@+id/rSponsorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                    android:background="@drawable/border_2_0_0_grey_third_radius"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pinpinbox_2_0_0_first_text"
                        android:textSize="14sp"
                        android:text="我正在參加贊助賽!請點進下方任一相本贊助我吧^^"
                        android:padding="16sp"
                        android:layout_toLeftOf="@+id/tvBuyP"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        fontPath ="fonts/OpenSans-Bold.ttf"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                       style="@style/ppb200_Button_main_small_radius"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="買P點"
                        android:layout_marginRight="16dp"
                        android:id="@+id/tvBuyP" />



                </RelativeLayout>




                <!--creative name-->
                <TextView
                    android:id="@+id/tvCreativeName"
                    style="@style/ppb200_detail_name"
                    android:layout_marginBottom="@dimen/ppb200_padding_margin_first"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                    android:text="" />


                <!--browsers follwersdata-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="36dp"
                            android:layout_height="8dp"
                            android:background="@drawable/border_2_0_0_grey_third_radius"
                            />

                        <LinearLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/tvViewed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0.1"
                                android:textColor="@color/pinpinbox_2_0_0_first_text"
                                android:textSize="@dimen/ppb200_title_second_size"
                                fontPath="fonts/OpenSans-Bold.ttf"
                                />

                            <TextView
                                android:id="@+id/tvV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/ppb200_padding_margin_third"
                                android:gravity="center"
                                android:letterSpacing="0.1"
                                android:text="@string/pinpinbox_2_0_0_other_text_people_browsing"
                                android:textColor="@color/pinpinbox_2_0_0_first_text"
                                android:textSize="@dimen/ppb200_common_text_small" />

                        </LinearLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ppb200_padding_margin_big">

                        <View
                            android:layout_width="36dp"
                            android:layout_height="8dp"
                            android:background="@drawable/border_2_0_0_grey_third_radius" />

                        <LinearLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvFollow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0.1"
                                android:text=""
                                android:textColor="@color/pinpinbox_2_0_0_first_text"
                                android:textSize="@dimen/ppb200_title_second_size"
                                fontPath="fonts/OpenSans-Bold.ttf"/>

                            <TextView
                                android:id="@+id/tvF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/ppb200_padding_margin_third"
                                android:gravity="center"
                                android:letterSpacing="0.1"
                                android:text="@string/pinpinbox_2_0_0_other_text_people_follow"
                                android:textColor="@color/pinpinbox_2_0_0_first_text"
                                android:textSize="@dimen/ppb200_common_text_small" />

                        </LinearLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ppb200_padding_margin_big">

                    <View
                        android:layout_width="36dp"
                        android:layout_height="8dp"
                        android:background="@drawable/border_2_0_0_grey_third_radius" />

                    <LinearLayout
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvSponsor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.1"
                            android:text=""
                            android:textColor="@color/pinpinbox_2_0_0_first_text"
                            android:textSize="@dimen/ppb200_title_second_size"
                            fontPath="fonts/OpenSans-Bold.ttf"/>

                        <TextView
                            android:id="@+id/tvS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ppb200_padding_margin_third"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text="@string/pinpinbox_2_0_0_other_text_people_sponsor"
                            android:textColor="@color/pinpinbox_2_0_0_first_text"
                            android:textSize="@dimen/ppb200_common_text_small" />

                    </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>


                <!--link-->
                <LinearLayout
                    android:id="@+id/linLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:layout_marginRight="@dimen/ppb200_padding_margin_first"
                    android:layout_marginTop="@dimen/ppb200_padding_margin_first"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.2"
                        android:text=""
                        android:textColor="@color/pinpinbox_2_0_0_secondary_text"
                        android:textSize="@dimen/ppb200_common_text_first" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/ppb200_padding_margin_second"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/webImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_web" />

                        <ImageView
                            android:id="@+id/facebookImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_facebook" />

                        <ImageView
                            android:id="@+id/googleImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_google" />

                        <ImageView
                            android:id="@+id/instagramImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_instagram" />

                        <ImageView
                            android:id="@+id/linkedinImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_linkedin" />

                        <ImageView
                            android:id="@+id/pinterestImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_pinterest" />

                        <ImageView
                            android:id="@+id/twitterImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_twitter" />


                        <ImageView
                            android:id="@+id/youtubeImg"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
                            android:src="@drawable/click_2_0_0_link_youtube" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/ppb200_padding_margin_big"
                    android:background="@color/pinpinbox_2_0_0_divider" />

                <TextView
                    android:id="@+id/tvAlbumsTitle"
                    style="@style/ppb200_title_second"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                    android:layout_marginTop="@dimen/ppb200_padding_margin_big"
                    android:text="@string/pinpinbox_2_0_0_title_works_collection" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
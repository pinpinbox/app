<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="84dp">

        <com.pinpinbox.android.Views.CircleView.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_picfileImg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            app:riv_corner_radius="72dp"
            app:riv_border_width="1dip"
            app:riv_border_color="@color/pinpinbox_color_divider"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            android:layout_marginLeft="16dp"
            android:scaleType="centerCrop"
           />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="18sp"
            android:textColor="@color/pinpinbox_color_username"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_identity"
            android:singleLine="true"
            android:layout_toRightOf="@+id/item_picfileImg"
            android:layout_toEndOf="@+id/item_picfileImg" />

        <TextView
            android:id="@+id/item_identity"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"

            android:gravity="center"
            />




    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinpinbox2_0_0_activity_bg"
    android:fitsSystemWindows="false">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout style="@style/ppb200_action_bar_with_status">


        <ImageView
            android:id="@+id/backImg"
            style="@style/ppb200_action_bar_icon"
            android:src="@drawable/ic200_arrow_left_dark"
            android:layout_alignParentBottom="true" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ppb200_common_icon_side"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ppb200_padding_margin_second"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvTabMy"
                style="@style/ppb200_action_bar_tab"
                android:background="@drawable/click_2_0_0_default"
                android:text="@string/pinpinbox_2_0_0_itemtype_collect_my" />

            <TextView
                android:id="@+id/tvTabOther"
                style="@style/ppb200_action_bar_tab"
                android:text="@string/pinpinbox_2_0_0_itemtype_collect_other" />

            <TextView
                android:id="@+id/tvTabShare"
                style="@style/ppb200_action_bar_tab"
                android:text="@string/pinpinbox_2_0_0_itemtype_collect_cooperation" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
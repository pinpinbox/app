<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1">

    <TextView
        android:id="@+id/tvPwdTitle"
        style="@style/ppb200_title_first"
        android:layout_marginTop="@dimen/ppb200_padding_margin_big"
        android:text="@string/pinpinbox_2_0_0_title_get_back_password" />

    <LinearLayout
        android:id="@+id/linPwdBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPwdTitle"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-4dp"
        android:background="@drawable/click_2_0_0_default"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ppb200_padding_margin_third"
        android:paddingLeft="2dp"
        android:paddingRight="@dimen/ppb200_padding_margin_second"
        android:paddingTop="@dimen/ppb200_padding_margin_third">

        <ImageView
            android:id="@+id/backImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="8dp"
            android:src="@drawable/ic200_arrow_left_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:letterSpacing="0.1"
            android:text="@string/pinpinbox_2_0_0_button_back_to_login"
            android:textColor="@color/pinpinbox_2_0_0_secondary_text"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:orientation="vertical">


        <!--enter phone-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvPwdCountry"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:background="@drawable/click_2_0_0_grey_third_radius"
                android:ellipsize="end"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:maxLines="2"
                android:paddingBottom="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:text="台灣+886"
                android:textColor="@color/pinpinbox_2_0_0_first_text"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/edPwdPhone"
                style="@style/ppb200_EditText"
                android:layout_width="230dp"
                android:layout_height="48dp"
                android:hint="@string/pinpinbox_2_0_0_input_hint_phone_number"
                android:inputType="phone"
                android:singleLine="true" />


        </LinearLayout>


        <!--enter email-->
        <RelativeLayout
            android:id="@+id/rPwdMail"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_2_0_0_grey_third_radius">


            <ImageView
                android:id="@+id/img2"
                style="@style/ppb200_edittext_icon"
                android:src="@drawable/ic200_mail_dark" />


            <EditText
                android:id="@+id/edPwdMail"
                style="@style/ppb200_EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/img2"
                android:background="@null"
                android:hint="@string/pinpinbox_2_0_0_input_hint_mail"
                android:inputType="textEmailAddress"
                android:paddingLeft="0dp"
                android:singleLine="true" />


        </RelativeLayout>


        <!--send phone number-->
        <TextView
            android:id="@+id/tvPwdSendPhone"
            style="@style/ppb200_Button_main_common_bottom_radius"
            android:layout_marginBottom="@dimen/ppb200_padding_margin_first"
            android:layout_marginTop="@dimen/ppb200_padding_margin_first"
            android:text="@string/pinpinbox_2_0_0_button_send" />


    </LinearLayout>


</RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/item_album_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="4"
                        android:textColor="@color/pinpinbox_color_dark"
                        android:textSize="12sp" />


                    <!--android:ellipsize="end"-->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_album_description"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/item_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/pinpinbox_color_unclick_gray"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:id="@+id/item_rShareCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/item_time"
                            android:layout_toRightOf="@+id/item_time">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignBottom="@+id/item_sharecount"
                                android:layout_alignTop="@+id/item_sharecount"
                                android:layout_toLeftOf="@+id/item_sharecount"
                                android:layout_toStartOf="@+id/item_sharecount"
                                 />


                            <TextView
                                android:id="@+id/item_sharecount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:singleLine="true"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="@color/pinpinbox_color_unclick_gray"/>

                        </RelativeLayout>


                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>



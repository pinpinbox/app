<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linBackground"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">
        <!--2dp移置tvName-->

        <com.pinpinbox.android.Views.CircleView.RoundedImageView
            android:id="@+id/userImg"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            app:riv_border_color="@color/pinpinbox_2_0_0_divider"
            app:riv_border_width="0.5dp"
            app:riv_corner_radius="36dp"
            app:riv_mutate_background="true"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ppb200_padding_margin_small"
            android:ellipsize="end"
            android:letterSpacing="0.1"
            android:maxLines="2"
            android:text=""
            android:paddingLeft="@dimen/ppb200_padding_margin_small"
            android:paddingRight="@dimen/ppb200_padding_margin_small"
            android:gravity="center_horizontal"
            android:textColor="@color/pinpinbox_2_0_0_first_text"
            android:textSize="10sp" />


    </LinearLayout>




</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/ppb200_padding_margin_first"
        android:padding="@dimen/ppb200_padding_margin_big">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:src="@drawable/ic200_drag_white" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ppb200_padding_margin_first"
            android:gravity="left|bottom"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="4dp"
            android:text="@string/pinpinbox_2_0_0_other_text_teach_scroll_exit_0"
            android:textColor="@color/white"
            android:textSize="@dimen/ppb200_title_second_size"
            android:textStyle="bold"
            fontPath="fonts/OpenSans-Bold.ttf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ppb200_padding_margin_second"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="4dp"
                android:text=" ▪ "
                android:textColor="@color/white"
                android:textSize="@dimen/ppb200_common_text_first"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="4dp"
                android:text="@string/pinpinbox_2_0_0_other_text_teach_scroll_exit_1"
                android:textColor="@color/white"
                android:textSize="@dimen/ppb200_common_text_first"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ppb200_padding_margin_second"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="4dp"
                android:text=" ▪ "
                android:textColor="@color/white"
                android:textSize="@dimen/ppb200_common_text_first"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="4dp"
                android:text="@string/pinpinbox_2_0_0_other_text_teach_scroll_exit_2"
                android:textColor="@color/white"
                android:textSize="@dimen/ppb200_common_text_first"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="88dp">



        <RelativeLayout
            android:id="@+id/rBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/click_2_0_0_card_notify"
            android:padding="4dp">


            <ImageView
                android:id="@+id/systemImg"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerInside"
                android:src="@drawable/pinpin_192" />


            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="38dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/systemImg"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:text=""
                android:letterSpacing="0.1"
                android:textColor="@color/pinpinbox_2_0_0_first_text"
                android:textSize="16sp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMessage"
                android:layout_toEndOf="@+id/systemImg"
                android:layout_toRightOf="@+id/systemImg"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="@dimen/ppb200_padding_margin_second">


                <ImageView
                    android:id="@+id/typeImg"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/pinpin_192"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tvSpecies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ppb200_padding_margin_third"
                    android:layout_toEndOf="@+id/typeImg"
                    android:layout_toRightOf="@+id/typeImg"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.1"
                    android:textColor="@color/pinpinbox_2_0_0_secondary_text"
                    android:textSize="@dimen/ppb200_common_text_third" />


                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text=""
                    android:letterSpacing="0.1"
                    android:textColor="@color/pinpinbox_2_0_0_secondary_text"
                    android:textSize="@dimen/ppb200_common_text_third" />


            </RelativeLayout>










        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
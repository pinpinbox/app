<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linBackground"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvTitle"
        style="@style/ppb200_title_pop_second"
        android:layout_marginBottom="@dimen/ppb200_padding_margin_first"
        android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
        android:layout_marginRight="@dimen/ppb200_padding_margin_first"
        android:text="@string/pinpinbox_2_0_0_pop_title_album_set" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ppb200_padding_margin_first"
        android:paddingTop="@dimen/ppb200_padding_margin_first">


        <TextView
            android:id="@+id/tvSort"
            style="@style/ppb200_pop_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ppb200_common_list_item_height"
            android:background="@drawable/click_2_0_0_list_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ppb200_padding_margin_first"
            android:text="@string/pinpinbox_2_0_0_itemtype_album_sort" />

        <TextView
            android:id="@+id/tvSelectPreview"
            style="@style/ppb200_pop_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ppb200_common_list_item_height"
            android:background="@drawable/click_2_0_0_list_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ppb200_padding_margin_first"
            android:text="@string/pinpinbox_2_0_0_itemtype_album_select_preview"
             />


        <TextView
            android:id="@+id/tvSetAudio"
            style="@style/ppb200_pop_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ppb200_common_list_item_height"
            android:background="@drawable/click_2_0_0_list_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ppb200_padding_margin_first"
            android:text="@string/pinpinbox_2_0_0_itemtype_album_set_audio"
            />


    </LinearLayout>


</LinearLayout>
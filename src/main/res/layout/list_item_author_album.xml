<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:contentPadding="-2.5dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">


                <com.pinpinbox.android.Views.CircleView.RoundedImageView
                    android:id="@+id/coverImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:riv_corner_radius="6dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/material_grey_500"
                android:layout_alignTop="@+id/bottomRelative"
                android:layout_marginTop="-1dp"/>

            <RelativeLayout
                android:id="@+id/bottomRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r"
                android:layout_marginTop="-6dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tvAlbumName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_grey_800"
                    android:textSize="14sp"
                    android:text=""
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="2dp"/>


                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/pinpinbox_color_dark"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:layout_below="@+id/tvAlbumName"
                    />


                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/pinpinbox_color_unclick_gray"
                    android:layout_below="@+id/description"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:singleLine="true"
                    android:maxLength="10"/>

            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>
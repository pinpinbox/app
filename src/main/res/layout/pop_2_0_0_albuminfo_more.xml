<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/ppb200_title_pop_second"
        android:layout_marginBottom="@dimen/ppb200_padding_margin_first"
        android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
        android:layout_marginRight="@dimen/ppb200_padding_margin_first"
        android:text="@string/pinpinbox_2_0_0_pop_title_do_what" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ppb200_padding_margin_first"
        android:paddingTop="@dimen/ppb200_padding_margin_first">



        <!--作品是自己則顯示-->
        <LinearLayout
            android:id="@+id/linEditContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


                <LinearLayout
                    android:id="@+id/linEditWork"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ppb200_item_height"
                    android:background="@drawable/click_2_0_0_list_item"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/tvEditWork"
                        style="@style/ppb200_pop_item"
                        android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                        android:text="@string/pinpinbox_2_0_0_itemtype_edit_album" />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linEditInfo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ppb200_item_height"
                    android:background="@drawable/click_2_0_0_list_item"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/tvEditInfo"
                        style="@style/ppb200_pop_item"
                        android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
                        android:text="@string/pinpinbox_2_0_0_itemtype_edit_info" />



                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/ppb200_padding_margin_first"
                android:layout_marginBottom="@dimen/ppb200_padding_margin_first"
                android:background="@color/pinpinbox_2_0_0_divider" />

        </LinearLayout>



        <!--收藏、贊助-->
        <LinearLayout
            android:id="@+id/linCollect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ppb200_common_list_item_height"
            android:background="@drawable/click_2_0_0_list_item"
            android:orientation="horizontal">

            <ImageView
               style="@style/ppb200_list_item_icon"
                android:src="@drawable/ic200_collect_dark" />

            <TextView
                android:id="@+id/tvCollect"
                style="@style/ppb200_pop_item"
                android:text="@string/pinpinbox_2_0_0_itemtype_collect"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/tvSponsorMore"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ppb200_padding_margin_second"
                android:background="@drawable/click_2_0_0_main_button_radius"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:paddingLeft="@dimen/ppb200_padding_margin_second"
                android:paddingRight="@dimen/ppb200_padding_margin_second"
                android:text="@string/pinpinbox_2_0_0_button_sponsor_more"
                android:textColor="@color/white"
                android:textSize="@dimen/ppb200_common_text_second"
                android:visibility="gone" />


        </LinearLayout>

        <!--分享-->
        <LinearLayout
            android:id="@+id/linShare"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ppb200_common_list_item_height"
            android:background="@drawable/click_2_0_0_list_item"
            android:orientation="horizontal">

            <ImageView
                style="@style/ppb200_list_item_icon"
                android:src="@drawable/ic200_share_dark" />

            <TextView
                android:id="@+id/tvShare"
                style="@style/ppb200_pop_item"
                android:text="@string/pinpinbox_2_0_0_itemtype_share" />

        </LinearLayout>

        <!--檢舉-->
        <LinearLayout
            android:id="@+id/linReport"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ppb200_common_list_item_height"
            android:background="@drawable/click_2_0_0_list_item"
            android:orientation="horizontal">

            <ImageView
                style="@style/ppb200_list_item_icon"
                android:src="@drawable/ic200_report_dark" />

            <TextView
                android:id="@+id/tvReport"
                style="@style/ppb200_pop_item"
                android:text="@string/pinpinbox_2_0_0_itemtype_report" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fontPath="http://schemas.android.com/apk/res-auto">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurOverlayColor="@color/blur_black" />

    <RelativeLayout
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginRight="@dimen/ppb200_padding_margin_big"
        android:layout_marginLeft="@dimen/ppb200_padding_margin_big"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:src="@drawable/pinpin_exchange_success"/>

        <TextView
            fontPath="fonts/OpenSans-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pinpinbox_2_0_0_toast_message_exchange_success"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/ppb200_padding_margin_first"/>

        <TextView
            fontPath="fonts/OpenSans-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="獎項資訊已保存在\n個人專區 > 選單 > 兌換清單"
            android:letterSpacing="0.1"
            android:gravity="center"
            android:textSize="@dimen/ppb200_common_text_first"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/ppb200_padding_margin_first"/>

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ppb200_padding_margin_first"
            android:text="@string/pinpinbox_2_0_0_other_text_i_know"
            android:padding="@dimen/ppb200_padding_margin_first"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:letterSpacing="0.1"
            android:background="@drawable/click_2_0_0_default"/>



    </LinearLayout>






</RelativeLayout>
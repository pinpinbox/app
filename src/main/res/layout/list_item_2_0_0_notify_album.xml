<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116dp">



        <RelativeLayout
            android:id="@+id/rBackground"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/relativeLayout8"
            android:layout_toRightOf="@+id/relativeLayout8"
            android:background="@drawable/click_2_0_0_card_notify"
            android:padding="4dp">


            <RelativeLayout
                android:id="@+id/rCover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/image_background_2_0_0_notify_item_cover_radius">

                <!--0.9看不清楚-->
                <com.pinpinbox.android.Views.CircleView.RoundedImageView
                    android:id="@+id/coverImg"
                    android:layout_width="56dp"
                    android:layout_height="84dp"
                    android:alpha="0.8"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="8dp"
                    app:riv_mutate_background="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/rCover"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:text=""
                android:letterSpacing="0.1"
                android:textColor="@color/pinpinbox_2_0_0_first_text"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/typeImg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:padding="2dp"
                android:layout_toEndOf="@+id/rCover"
                android:layout_toRightOf="@+id/rCover"
                android:scaleType="centerInside" />


            <TextView
                android:letterSpacing="0.1"
                android:id="@+id/tvSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/typeImg"
                android:layout_toRightOf="@+id/typeImg"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/pinpinbox_2_0_0_secondary_text"
                android:textSize="@dimen/ppb200_common_text_third" />
            <TextView
                android:id="@+id/tvTime"
                android:letterSpacing="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
               android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/pinpinbox_2_0_0_secondary_text"
                android:textSize="@dimen/ppb200_common_text_third" />


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/ppb200_padding_margin_first"
        android:layout_marginBottom="@dimen/ppb200_padding_margin_first"
        android:paddingRight="@dimen/ppb200_padding_margin_first">

        <TextView
            android:id="@+id/tvFeatureArea"
            style="@style/ppb200_title_second"
            android:text="@string/pinpinbox_2_0_0_title_feature_area" />

        <View
            style="@style/ppb200_divider_list"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ppb200_padding_margin_first" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvRecommend"
        style="@style/ppb200_title_third"
        android:text="@string/pinpinbox_2_0_0_title_feature_recommend"
        android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
        android:textColor="@color/pinpinbox_2_0_0_hint_grey"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvRecommend"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/ppb200_padding_margin_second"
        android:layout_marginBottom="@dimen/ppb200_padding_margin_second"/>




    <TextView
        android:id="@+id/tvHot"
        style="@style/ppb200_title_third"
        android:text="@string/pinpinbox_2_0_0_title_feature_hot"
        android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
        android:textColor="@color/pinpinbox_2_0_0_hint_grey"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHot"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/ppb200_padding_margin_second" />



</LinearLayout>
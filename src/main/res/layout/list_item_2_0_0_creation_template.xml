        <ImageView
            android:id="@+id/templateImg"
            android:layout_width="52dp"
            android:layout_height="78dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />


    </RelativeLayout>


</RelativeLayout>


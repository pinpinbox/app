<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="false">


    <WebView
        android:id="@+id/messageWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rActionBar" />

    <RelativeLayout
        style="@style/ppb200_action_bar_with_status">


        <!--<ImageView-->
            <!--android:id="@+id/web_back"-->
            <!--style="@style/ppb200_ic_action_back"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="@drawable/click_2_0_0_default"-->
            <!--android:src="@drawable/ic200_arrow_left_dark" />-->

        <TextView
            android:id="@+id/tvBack"
            android:background="@drawable/click_2_0_0_default"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ppb200_action_bar_icon_height"
            android:layout_alignParentBottom="true"
            android:text="@string/pinpinbox_2_0_0_button_exit"
            android:textColor="@color/pinpinbox_2_0_0_first_text"
            android:gravity="center"
            android:paddingLeft="@dimen/ppb200_padding_margin_first"
            android:paddingRight="@dimen/ppb200_padding_margin_first"
            android:textSize="@dimen/ppb200_common_text_first"
            android:letterSpacing="0.1"
            />

        <TextView
            android:id="@+id/tvTitle"
            fontPath="fonts/OpenSans-Bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ppb200_common_icon_side"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/ppb200_common_icon_side"
            android:layout_marginRight="@dimen/ppb200_common_icon_side"
            android:ellipsize="end"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:maxLines="2"
            android:textColor="@color/pinpinbox_2_0_0_first_text"
            android:textSize="@dimen/ppb200_common_text_second"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>
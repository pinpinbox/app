<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
        android:layout_marginRight="@dimen/ppb200_padding_margin_first"
        android:layout_marginTop="@dimen/ppb200_padding_margin_big"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvName"
            style="@style/ppb200_title_third"
            android:gravity="left"
            android:maxWidth="192dp"
            android:text="" />

        <View
            style="@style/ppb200_divider_list"
            android:layout_gravity="bottom"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tvMore"
            style="@style/ppb200_Button_grey_mini_radius"
            android:layout_width="64dp"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="@dimen/ppb200_padding_margin_first"
            android:maxWidth="@dimen/ppb200_common_button_mini_width"
            android:text="@string/pinpinbox_2_0_0_button_more"
            android:visibility="gone" />


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCategoryBookCase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:paddingLeft="8dp" />

    <!--180+18-->


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rCollect"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<com.baoyz.widget.PullRefreshLayout-->
        <!--android:id="@+id/swipeRefreshLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--app:refreshType="material">-->



  <!--</com.baoyz.widget.PullRefreshLayout>-->

    <!--Upload-->
        <RelativeLayout
            android:id="@+id/rNoDataCreateAlbum"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:alpha="0.8"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/click_2_0_0_default"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/createalbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/view"
                android:layout_alignLeft="@+id/view"
                android:layout_alignRight="@+id/view"
                android:layout_alignStart="@+id/view"
                android:layout_centerVertical="true"
                android:src="@drawable/button_main_bar_createalbum" />

            <TextView
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createalbum"
                android:text="趕緊建立自己的作品吧 !"
                android:textSize="16sp"
                android:textColor="#5e5e5e"/>
        </RelativeLayout>


    <!--OtherCollect-->
    <RelativeLayout
        android:id="@+id/rGuide"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:alpha="0.8"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下的方式都能找到喜歡的作品唷 !"
            android:textSize="16sp"
            android:textColor="#5e5e5e"
            android:layout_centerHorizontal="true"
             />

        <LinearLayout
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">


                <RelativeLayout
                    android:id="@+id/rHome"
                    android:background="@drawable/click_2_0_0_default"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/button_main_bar_home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/home"
                        android:layout_alignLeft="@+id/home"
                        android:layout_alignRight="@+id/home"
                        android:layout_alignStart="@+id/home"
                        android:layout_below="@+id/home"
                        android:gravity="center"
                        android:text="動態資訊"
                        android:textSize="14sp"
                        android:textColor="#5e5e5e"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rSearch"
                    android:background="@drawable/click_2_0_0_default"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/button_main_bar_search" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/search"
                        android:layout_alignLeft="@+id/search"
                        android:layout_alignRight="@+id/search"
                        android:layout_alignStart="@+id/search"
                        android:layout_below="@+id/search"
                        android:gravity="center"
                        android:text="搜尋"
                        android:textSize="14sp"
                        android:textColor="#5e5e5e"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rRank"
                    android:background="@drawable/click_2_0_0_default"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/rank"
                        android:layout_width="56dp"
                        android:layout_height="56dp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/rank"
                        android:layout_alignLeft="@+id/rank"
                        android:layout_alignRight="@+id/rank"
                        android:layout_alignStart="@+id/rank"
                        android:layout_below="@+id/rank"
                        android:gravity="center"
                        android:text="排行榜"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#5e5e5e"/>
                </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <!--Share-->
    <RelativeLayout
        android:id="@+id/rAnnotation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="0.8"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="進入編輯器後點選右上方(如圖指示),即可添加使用者共同建立作品唷 !"
            android:textColor="#5e5e5e"
            android:id="@+id/textView5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_create_album1"
                />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_create_album2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </android.support.v7.widget.CardView>



    </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false">


    <com.pinpinbox.android.Views.SuperSwipeRefreshLayout
        android:id="@+id/pinPinBoxRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvFollow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="@dimen/ppb200_title_margin_second" />


    </com.pinpinbox.android.Views.SuperSwipeRefreshLayout>


    <RelativeLayout
        android:id="@+id/rActionBar"
        style="@style/ppb200_action_bar_with_status">

        <ImageView
            android:id="@+id/backImg"
            style="@style/ppb200_ic_action_back"
            android:layout_alignParentBottom="true"
            android:background="@drawable/click_2_0_0_default"
            android:src="@drawable/ic200_arrow_left_dark" />


        <View
            android:id="@+id/vRefreshAnim"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gradient_progress_main"
            android:scaleX="0"
            android:visibility="gone" />

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/pbRefresh"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:indeterminate="true"
            android:visibility="gone"
            app:spb_colors="@array/loadmore"
            app:spb_gradients="true"
            app:spb_mirror_mode="true"
            app:spb_progressiveStart_activated="true"
            app:spb_progressiveStart_speed="3"
            app:spb_progressiveStop_speed="6"
            app:spb_reversed="true"
            app:spb_sections_count="8"
            app:spb_speed="3"
            app:spb_stroke_separator_length="0dp"
            app:spb_stroke_width="4dp" />


    </RelativeLayout>


    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:id="@+id/pbLoadMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-4dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:spb_colors="@array/loadmore"
        app:spb_gradients="true"
        app:spb_mirror_mode="true"
        app:spb_progressiveStart_activated="true"
        app:spb_progressiveStart_speed="3"
        app:spb_progressiveStop_speed="6"
        app:spb_reversed="true"
        app:spb_sections_count="8"
        app:spb_speed="3"
        app:spb_stroke_separator_length="0dp"
        app:spb_stroke_width="4dp" />

    <TextView
        android:id="@+id/tvGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/ppb200_padding_margin_big"
        android:layout_marginRight="@dimen/ppb200_padding_margin_big"
        android:layout_marginTop="192dp"
        android:background="@drawable/border_2_0_0_bg_guide"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="4dp"
        android:padding="@dimen/ppb200_padding_margin_big"
        android:text="@string/pinpinbox_2_0_0_guide_no_follow_user"
        android:textColor="@color/white"
        android:textSize="@dimen/ppb200_guide"
        android:visibility="gone" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ppb200_common_detaillist_item_height"
        android:background="@drawable/click_2_0_0_list_item">


        <com.pinpinbox.android.Views.CircleView.RoundCornerImageView
            android:id="@+id/detaillistImg"
            style="@style/ppb200_common_detaillist_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ppb200_padding_margin_first" />


        <TextView
            android:id="@+id/tvExchangeName"
            style="@style/ppb200_common_detaillist_name"
            android:layout_alignTop="@+id/detaillistImg"
            android:layout_marginLeft="@dimen/ppb200_padding_margin_second"
            android:layout_marginRight="@dimen/ppb200_padding_margin_first"
            android:layout_toEndOf="@+id/detaillistImg"
            android:layout_toRightOf="@+id/detaillistImg" />

        <TextView
            android:id="@+id/tvExchangeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/detaillistImg"
            android:layout_alignEnd="@+id/tvExchangeName"
            android:layout_alignRight="@+id/tvExchangeName"
            android:layout_marginBottom="-2dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.1"
            android:text=""
            android:textColor="@color/pinpinbox_2_0_0_secondary_text"
            android:textSize="@dimen/ppb200_common_text_small" />


    </RelativeLayout>


    <View style="@style/ppb200_divider_list" />


</LinearLayout>
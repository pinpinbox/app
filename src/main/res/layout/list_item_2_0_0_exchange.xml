<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">


        <!--shadow setting-->
        <!--android:elevation="8dp"-->
        <!--android:translationZ="12dp"-->
        <RelativeLayout
            android:id="@+id/rItemBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_background_2_0_0_home_item_cover_border">


            <com.pinpinbox.android.Views.CircleView.RoundCornerImageView
                android:id="@+id/exchangeImg"
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:layout_centerHorizontal="true"
                android:alpha="0.8"
                android:scaleType="centerCrop"
                app:siBorderAlpha="0"
                app:siRadius="8dp" />


        </RelativeLayout>

        <!--作品名稱-->
        <TextView
            android:id="@+id/tvExchangeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:letterSpacing="0.1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/pinpinbox_2_0_0_first_text"
            android:textSize="@dimen/ppb200_staggeredgrid_album_name" />


        <!--時間-->
        <TextView
            android:id="@+id/tvExchangeTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:letterSpacing="0.1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/pinpinbox_2_0_0_first_pink"
            android:textSize="@dimen/ppb200_common_text_small"
            android:visibility="gone" />


    </LinearLayout>


</RelativeLayout>
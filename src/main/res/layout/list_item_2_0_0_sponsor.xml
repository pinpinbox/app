        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="@dimen/ppb200_padding_margin_second"-->
        <!--android:layout_toLeftOf="@+id/tvFollow"-->
        <!--android:layout_toStartOf="@+id/tvFollow"-->
        <!--android:text="留言"-->

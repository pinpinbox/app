<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ppb200_padding_margin_second">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:background="@drawable/image_background_2_0_0_radius">


            <com.pinpinbox.android.Views.CircleView.RoundCornerImageView
                android:id="@+id/coverImg"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                app:siBorderAlpha="0"
                app:siRadius="4dp" />

            <RelativeLayout
                android:id="@+id/rContributionstatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_2_0_0_blackalpha_radius"
                android:visibility="invisible">

                <!--<ImageView-->
                    <!--android:layout_width="56dp"-->
                    <!--android:layout_height="56dp"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:src="@drawable/ic200_select_white" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pinpinbox_2_0_0_other_text_cancel_contribute"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:letterSpacing="0.1"
                   />


            </RelativeLayout>


        </RelativeLayout>


        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:letterSpacing="0.1"
            android:textColor="@color/pinpinbox_2_0_0_first_text"
            android:textSize="@dimen/ppb200_common_text_small" />


    </LinearLayout>



</RelativeLayout>